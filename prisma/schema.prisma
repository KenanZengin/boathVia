
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Ships{
  id String @id @default(cuid()) @unique
  city String
  district String
  port String[]
  star Float
  comment Int
  category String
  capacity Int
  hour_price Int
  img_path String 
  reservation ReservationCalendar?

  @@index([id])
}

model Services{
  id String @id @default(cuid()) @unique
  kind String
  info String
  img_path_2 String 
}

enum UserRole {
  ADMIN
  USER
}

enum UserLanguage {
  ENG
  TR
}

model User{
  id String @id @default(cuid())
  name String?
  surname String?
  email String? @unique
  password String?
  phone String?
  rights Boolean @default(false)
  role UserRole @default(USER)
  language UserLanguage @default(ENG)
  image String?
  emailVerified DateTime?
  userFavShips UserFavShips?

  @@index([id])
}

model UserFavShips {
  id String @id @default(cuid())
  userId String @unique
  ships String[]

  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
} 


model UserReservation{
  id String @id @default(cuid())
  userId String 
  shipId String 
  port String
  people Int
  duration Int
  time DateTime[]
  payment Boolean @default(false)
  status Boolean @default(false)
  img_path String 

}


model ReservationCalendar{
  id String @id @default(cuid())
  shipId String @unique
  time DateTime[]

  ships Ships @relation(fields: [shipId],references: [id],onDelete: Cascade)
}






